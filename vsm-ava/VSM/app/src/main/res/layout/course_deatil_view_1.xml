<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/course_bg">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/author_1"
                        android:id="@+id/imageView2" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Enrolled 123 | Views 22"
                            android:layout_margin="10dp"
                            android:textColor="#fff"
                            android:id="@+id/textView5" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_margin="10dp"
                            android:background="@drawable/transparent_gray_border"
                            android:text="Watch Video" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Chemistry"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:id="@+id/textView6" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:weightSum="4">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:src="@drawable/vsm_icn_chapters"
                    android:background="@drawable/black_bacground" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton2"
                    android:layout_weight="1"
                    android:background="@drawable/black_bacground"
                    android:src="@drawable/vsm_icn_concepts" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/black_bacground"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:src="@drawable/vsm_icn_annotation" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/black_bacground"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton4"
                    android:layout_weight="1"
                    android:src="@drawable/vsm_icn_definition" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="800dp"
                android:layout_weight="1"
                android:id="@+id/sub_fragment_container"></FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>